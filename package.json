{
  "name": "@kazupon/eslint-config",
  "version": "0.0.0",
  "description": "ESLint config for @kazupon",
  "keywords": [
    "config",
    "eslint"
  ],
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/eslint-config.git"
  },
  "homepage": "https://github.com/kazupon/eslint-config#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 18.18"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "pnpm build",
    "changelog": "gh-changelogen --repo=kazupon/eslint-config",
    "release": "bumpp --commit \"release: v%s\" --all --push --tag",
    "lint": "run-p \"lint:* {@}\" --",
    "lint:prettier": "prettier . --check",
    "lint:eslint": "eslint .",
    "fix": "run-p \"fix:* {@}\" --",
    "fix:prettier": "prettier . --write",
    "fix:eslint": "eslint . --fix",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "build": "tsdown",
    "build:inspector": "pnpm build && pnpx @eslint/config-inspector build",
    "typecheck": "tsc -p ."
  },
  "devDependencies": {
    "@kazupon/prettier-config": "^0.1.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.9",
    "bumpp": "^9.4.1",
    "eslint": "^9.6.0",
    "gh-changelogen": "^0.2.8",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.3.2",
    "tsdown": "^0.2.3",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  },
  "peerDependencies": {
    "eslint": "^8.56.0 || ^9.0.0"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "prettier": "@kazupon/prettier-config",
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74"
}
