{
  "name": "@kazupon/eslint-config",
  "version": "0.6.0",
  "description": "ESLint config for @kazupon",
  "keywords": [
    "config",
    "eslint"
  ],
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/eslint-config.git"
  },
  "homepage": "https://github.com/kazupon/eslint-config#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 18.18"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "pnpm build",
    "changelog": "gh-changelogen --repo=kazupon/eslint-config",
    "release": "bumpp --commit \"release: v%s\" --all --push --tag",
    "lint": "run-p \"lint:* {@}\" --",
    "lint:prettier": "prettier . --check",
    "lint:eslint": "eslint .",
    "fix": "run-p \"fix:* {@}\" --",
    "fix:prettier": "prettier . --write",
    "fix:eslint": "eslint . --fix",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "test": "vitest",
    "build": "tsdown",
    "build:inspector": "pnpm build && pnpx @eslint/config-inspector build",
    "typecheck": "tsc -p ."
  },
  "dependencies": {
    "@eslint/js": "^9.0.0",
    "eslint-flat-config-utils": "^0.2.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "globals": "^15.8.0"
  },
  "peerDependencies": {
    "eslint": ">=8.56.0 || >=9.0.0",
    "eslint-config-prettier": ">=9.1.0",
    "eslint-plugin-jsdoc": ">=48.5.0",
    "eslint-plugin-jsonc": ">=2.16.0",
    "eslint-plugin-regexp": ">=2.6.0",
    "eslint-plugin-unicorn": ">=54.0.0",
    "eslint-plugin-vue": ">=9.24.0",
    "typescript-eslint": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "typescript-eslint": {
      "optional": true
    },
    "eslint-config-prettier": {
      "optional": true
    },
    "eslint-plugin-jsdoc": {
      "optional": true
    },
    "eslint-plugin-jsonc": {
      "optional": true
    },
    "eslint-plugin-regexp": {
      "optional": true
    },
    "eslint-plugin-unicorn": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@kazupon/prettier-config": "^0.1.1",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.9",
    "bumpp": "^9.4.1",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.5.2",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "gh-changelogen": "^0.2.8",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.2",
    "tsdown": "^0.2.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "prettier": "@kazupon/prettier-config",
  "packageManager": "pnpm@9.5.0"
}
